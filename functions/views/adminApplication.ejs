                </ul>

            </ul>
        </nav>
    </div>

    <div class="main-content">
        <h1>Applications</h1>
        <p>Manage college applications </p>
     
        <div class="panel-wrapper">
            <div class="panel-head">
                User Infomation
            </div>
            <div class="panel-body">
                <div class="row">
                <div class="col-8">
                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">    
                </div>
                
                <div class="col-4">
                <select class="form-control form-control-lg" value="Search using" id="search" name="Refer">
                    <option value=1>Email ID</option>
                    <option value=2>Phone</option>
                    <option value=3>College</option>
                    <option value=4>Year</option>
                    <option value=4>Status</option>

                  </select>
                </div>
            </div>
          <br>      <table class="table table-striped table-bordered" id="myTable">
                        <thead>
                          <tr>
                            <th></th>
                            <th>Email Id</th>
                            <th>Phone</th>
                            <th>College</th>
                            <th>Year</th>
                            <th>Status</th>                                                             
                          </tr>
                        </thead>
                        <tbody>
                            <% for ( var i = 0; i < apps.length; i++){ var app=apps[i]; %>
                          <tr> 
                            <form action="/adminView" method="POST" target="_blank">
                            <td><%= i+1 %></td>
                            <td><%= app.email %></td>
                            <td><%= app.phone %></td>
                            <td><%= app.college %></td>
                            <td><%= app.year %></td>
                            <td><%= app.status %></td>
                            <input type="hidden"  name="appid" value=<%= appid[i] %> >
                
                            <td><button class="btn btn-primary btn-sm" type="submit" >View more</button></td>
                           </form> 
                          </tr>
                          <% } %>
                        </tbody>
                        </table>
          
                    </div>
                </div>
  </div>
</div>

    
